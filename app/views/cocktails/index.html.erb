<div class="jumbotron jumbotron-fluid jumbotron-edit">
  <div class="container">
    <h1 class="display-4 jumbo-title">A Cocktail Menu: <br> Made For You, By You!</h1>
    <%= link_to "Create a new Cocktail", new_cocktail_path, class: "lead btn btn-secondary" %>
  </div>
</div>

<div class="container">
  <h2>Your Cocktails</h2>
  <div class="cocktail-grid">
    <% @cocktails.each do |cocktail| %>
      <div class="card">
        <%= image_tag "drink-#{rand(1..3)}", alt: "picture of a drink", width: 300, class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><strong> <%= link_to "#{cocktail.name}", cocktail_path(cocktail.id) %></strong></h5>
            <p><em>Ingredients</em></p>
            <% cocktail.ingredients.each do |ingredient| %>
              <p><%= ingredient.name %></p>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

